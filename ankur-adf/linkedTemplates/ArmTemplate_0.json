{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "ankur-adf"
		},
		"PostgreSql aiven_password": {
			"type": "secureString",
			"metadata": "Secure string for 'password' of 'PostgreSql aiven'"
		},
		"Shopify1_accessToken": {
			"type": "secureString",
			"metadata": "Secure string for 'accessToken' of 'Shopify1'"
		},
		"adf_adls_connect_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'adf_adls_connect'"
		},
		"PostgreSql aiven_properties_typeProperties_server": {
			"type": "string",
			"defaultValue": "pg-ankur-ankurzalavadiya11-65ec.d.aivencloud.com"
		},
		"PostgreSql aiven_properties_typeProperties_database": {
			"type": "string",
			"defaultValue": "defaultdb"
		},
		"PostgreSql aiven_properties_typeProperties_username": {
			"type": "string",
			"defaultValue": "avnadmin"
		},
		"RestAPIService_Products_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://dummyjson.com"
		},
		"Shopify1_properties_typeProperties_host": {
			"type": "string",
			"defaultValue": "grow-men.myshopify.com"
		},
		"adf_adls_connect_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://ankurdataenggstorage.dfs.core.windows.net/"
		},
		"pokeapi_ls_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://pokeapi.co/api/v2/pokemon?limit=20&offset=0"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/PostgreSql aiven')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "PostgreSqlV2",
				"typeProperties": {
					"server": "[parameters('PostgreSql aiven_properties_typeProperties_server')]",
					"port": "26357",
					"database": "[parameters('PostgreSql aiven_properties_typeProperties_database')]",
					"username": "[parameters('PostgreSql aiven_properties_typeProperties_username')]",
					"password": {
						"type": "SecureString",
						"value": "[parameters('PostgreSql aiven_password')]"
					},
					"sslMode": 2,
					"authenticationType": "Basic"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/RestAPIService_Products')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "HttpServer",
				"typeProperties": {
					"url": "[parameters('RestAPIService_Products_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/Shopify1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "Shopify",
				"typeProperties": {
					"host": "[parameters('Shopify1_properties_typeProperties_host')]",
					"accessToken": {
						"type": "SecureString",
						"value": "[parameters('Shopify1_accessToken')]"
					},
					"useEncryptedEndpoints": true,
					"useHostVerification": true,
					"usePeerVerification": true
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/adf_adls_connect')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('adf_adls_connect_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('adf_adls_connect_accountKey')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/pokeapi_ls')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"annotations": [],
				"type": "RestService",
				"typeProperties": {
					"url": "[parameters('pokeapi_ls_properties_typeProperties_url')]",
					"enableServerCertificateValidation": true,
					"authenticationType": "Anonymous"
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('factoryName'), '/adls_adf_dest')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "adf_adls_connect",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"dest_container_par": {
						"type": "String"
					},
					"dest_folder_par": {
						"type": "String"
					},
					"dest_file_par": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"folderPath": "webdata",
						"fileSystem": "adf-dest"
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/adf_adls_connect')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/adls_adf_source')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "adf_adls_connect",
					"type": "LinkedServiceReference"
				},
				"parameters": {
					"source_container_par": {
						"type": "String"
					},
					"source_folder_par": {
						"type": "String"
					},
					"source_file_par": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "DelimitedText",
				"typeProperties": {
					"location": {
						"type": "AzureBlobFSLocation",
						"fileName": {
							"value": "@dataset().source_file_par",
							"type": "Expression"
						},
						"folderPath": {
							"value": "@dataset().source_folder_par",
							"type": "Expression"
						},
						"fileSystem": {
							"value": "@dataset().source_container_par",
							"type": "Expression"
						}
					},
					"columnDelimiter": ",",
					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/adf_adls_connect')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/pokeapi_source')]",
			"type": "Microsoft.DataFactory/factories/datasets",
			"apiVersion": "2018-06-01",
			"properties": {
				"linkedServiceName": {
					"referenceName": "pokeapi_ls",
					"type": "LinkedServiceReference"
				},
				"annotations": [],
				"type": "RestResource",
				"typeProperties": {},
				"schema": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/linkedServices/pokeapi_ls')]"
			]
		},
		{
			"name": "[concat(parameters('factoryName'), '/Fetch Pokemon Data')]",
			"type": "Microsoft.DataFactory/factories/pipelines",
			"apiVersion": "2018-06-01",
			"properties": {
				"activities": [
					{
						"name": "Fetch From PokeAPI",
						"type": "Copy",
						"dependsOn": [],
						"policy": {
							"timeout": "0.12:00:00",
							"retry": 1,
							"retryIntervalInSeconds": 30,
							"secureOutput": false,
							"secureInput": false
						},
						"userProperties": [],
						"typeProperties": {
							"source": {
								"type": "RestSource",
								"httpRequestTimeout": "00:01:40",
								"requestInterval": "00.00:00:00.010",
								"requestMethod": "GET",
								"paginationRules": {
									"AbsoluteUrl": "$.next"
								}
							},
							"sink": {
								"type": "DelimitedTextSink",
								"storeSettings": {
									"type": "AzureBlobFSWriteSettings"
								},
								"formatSettings": {
									"type": "DelimitedTextWriteSettings",
									"quoteAllText": true,
									"fileExtension": ".txt"
								}
							},
							"enableStaging": false,
							"translator": {
								"type": "TabularTranslator",
								"mappings": [
									{
										"source": {
											"path": "[['name']"
										},
										"sink": {
											"name": "name",
											"type": "String"
										}
									},
									{
										"source": {
											"path": "[['url']"
										},
										"sink": {
											"name": "url",
											"type": "String"
										}
									}
								],
								"collectionReference": "$['results']"
							}
						},
						"inputs": [
							{
								"referenceName": "pokeapi_source",
								"type": "DatasetReference",
								"parameters": {}
							}
						],
						"outputs": [
							{
								"referenceName": "adls_adf_source",
								"type": "DatasetReference",
								"parameters": {
									"source_container_par": "adf-dest",
									"source_folder_par": "pokemon-data",
									"source_file_par": "data-1.csv"
								}
							}
						]
					}
				],
				"policy": {
					"elapsedTimeMetric": {}
				},
				"annotations": []
			},
			"dependsOn": [
				"[concat(variables('factoryId'), '/datasets/pokeapi_source')]",
				"[concat(variables('factoryId'), '/datasets/adls_adf_source')]"
			]
		}
	]
}